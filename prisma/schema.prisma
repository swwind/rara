// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  slot String @id

  title   String
  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  banner   String   @default("")
  category String
  tags     String[]
  pin      Int      @default(0)
  hidden   Boolean  @default(true)
  views    Int      @default(0)

  replies Reply[]
}

model Reply {
  id Int @id @default(autoincrement())

  post     Post   @relation(fields: [postSlot], references: [slot])
  postSlot String

  nickname String
  homepage String
  content  String
  email    String
  github   String
  qq       String

  createdAt DateTime @default(now())

  notify Boolean @default(false)

  replyToId Int?
  replyTo   Reply?  @relation("replytoreply", fields: [replyToId], references: [id])
  replies   Reply[] @relation("replytoreply")
}

model File {
  filename String   @id
  mimetype String
  size     Int
  uploadAt DateTime @default(now())
}
